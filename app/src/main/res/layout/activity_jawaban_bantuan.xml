<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0D8E4"
    tools:context=".JawabanBantuanActivity">

    <!-- Header Halaman -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingStart="24dp"
        android:paddingTop="32dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#716A8D" />

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Bantuan"
            android:textColor="#716A8D"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_back_button"
            app:layout_constraintStart_toEndOf="@id/iv_back_button"
            app:layout_constraintTop_toTopOf="@id/iv_back_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Konten Jawaban -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        android:background="@drawable/bg_white_rounded_corner"
        android:elevation="4dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pertanyaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#716A8D"
                android:textSize="18sp"
                tools:text="Bagaimana cara memesan (reservasi) melalui aplikasi?" />

            <TextView
                android:id="@+id/tv_jawaban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_regular"
                android:lineSpacingExtra="6dp"
                android:textColor="#857F9A"
                android:textSize="14sp"
                tools:text="Untuk melakukan reservasi online, Anda bisa mengikuti langkah-langkah berikut:\n\nâ€¢ Pada halaman utama (Beranda), tekan tombol 'Reservasi Online' atau tombol '+' Reservasi di bagian bawah layar." />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
