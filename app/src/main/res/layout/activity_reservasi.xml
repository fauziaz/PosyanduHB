<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".ReservasiActivity">

    <!--
        ====================
        PERBAIKAN HEADER
        ====================
        1. Menggunakan ConstraintLayout agar lebih fleksibel dan modern.
        2. Mengubah layout_height menjadi "wrap_content" agar tinggi header
           menyesuaikan isinya (tidak terlalu panjang).
        3. Menambahkan constraint untuk membuat semua elemen sejajar secara vertikal.
    -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0D8E4"
        android:padding="20dp">

        <!-- Hallo + Nama -->
        <LinearLayout
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:text="Hallo"
                android:textColor="#5A5A5A"
                android:textSize="14sp" />

            <TextView
                android:text="Celine"
                android:textStyle="bold"
                android:textColor="#2F2F2F"
                android:textSize="22sp" />
        </LinearLayout>

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo_posyandu"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_posyandu"
            android:contentDescription="Logo Posyandu"
            app:layout_constraintEnd_toStartOf="@id/btn_more"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"/>

        <!-- Tombol Titik Tiga -->
        <ImageView
            android:id="@+id/btn_more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_more_vert"
            android:contentDescription="Menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout> <!-- Akhir dari Header -->


    <!-- ===== KONTEN FORM (Tidak ada perubahan di sini) ===== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Pilih Layanan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Layanan"
                android:textStyle="bold"
                android:textColor="#4E4E4E"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <Spinner
                android:id="@+id/spinnerLayanan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_box"
                android:paddingHorizontal="12dp"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="14dp" />

            <!-- Pilih Tanggal -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Tanggal"
                android:textStyle="bold"
                android:textColor="#4E4E4E"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_box"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="14dp">

                <EditText
                    android:id="@+id/etTanggal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Pilih tanggal"
                    android:background="@null"
                    android:focusable="false"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    android:contentDescription="Ikon Kalender" />
            </LinearLayout>

            <!-- Pilih Jam -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Jam Antrian"
                android:textStyle="bold"
                android:textColor="#4E4E4E"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <Spinner
                android:id="@+id/spinnerJam"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_box"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="14dp" />

            <!-- Nama Balita -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Balita"
                android:textStyle="bold"
                android:textColor="#4E4E4E"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/etNamaBalita"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nama Balita"
                android:background="@drawable/bg_input_box"
                android:paddingHorizontal="12dp"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_marginBottom="20dp" />

            <!-- Nomor Antrian -->
            <TextView
                android:id="@+id/tvNomorAntrian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A12"
                android:textColor="#8B6F84"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harap datang 15 menit sebelum jam antrian."
                android:textColor="#888888"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Tombol -->
            <Button
                android:id="@+id/btnKonfirmasi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Konfirmasi Reservasi"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/bg_button_primary" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
