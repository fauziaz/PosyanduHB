<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0D8E4"
    tools:context=".ReservasiActivity">

    <!-- Konten utama menggunakan ConstraintLayout seperti HomeActivity -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Bagian Header Atas -->
        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:text="Hallo,\nCeline"
            android:textColor="#716A8D"
            android:textSize="32sp"
            android:lineSpacingExtra="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/poppins_bold" />

        <ImageView
            android:id="@+id/ic_posyandu"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginEnd="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_posyandu"
            android:contentDescription="Logo Posyandu"
            app:layout_constraintBottom_toBottomOf="@id/tv_greeting"
            app:layout_constraintEnd_toStartOf="@id/iv_more_options"
            app:layout_constraintTop_toTopOf="@id/tv_greeting" />

        <ImageView
            android:id="@+id/iv_more_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_menu_more"
            android:contentDescription="Menu"
            app:layout_constraintBottom_toBottomOf="@id/ic_posyandu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ic_posyandu"
            app:tint="#5C5C5C" />

        <!-- Konten Utama dengan Background Putih Rounded Top -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_white_rounded_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_greeting"
            android:clipToPadding="false"
            android:paddingBottom="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="24dp">

                <!-- Pilih Layanan -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Layanan"
                    android:textStyle="bold"
                    android:textColor="#4E4E4E"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp" />

                <Spinner
                    android:id="@+id/spinnerLayanan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_box"
                    android:paddingHorizontal="12dp"
                    android:spinnerMode="dropdown"
                    android:prompt="@string/prompt_layanan"
                    android:layout_marginBottom="14dp" />

                <!-- Pilih Tanggal -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Tanggal"
                    android:textStyle="bold"
                    android:textColor="#4E4E4E"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_box"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:layout_marginBottom="14dp">

                    <EditText
                        android:id="@+id/etTanggal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Pilih tanggal"
                        android:background="@null"
                        android:focusable="false"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        android:contentDescription="Ikon Kalender" />
                </LinearLayout>

                <!-- Pilih Jam -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Jam Antrian"
                    android:textStyle="bold"
                    android:textColor="#4E4E4E"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp" />

                <Spinner
                    android:id="@+id/spinnerJam"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_box"
                    android:paddingHorizontal="12dp"
                    android:spinnerMode="dropdown"
                    android:prompt="@string/prompt_jam"
                    android:layout_marginBottom="14dp" />

                <!-- Nama Balita -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Balita"
                    android:textStyle="bold"
                    android:textColor="#4E4E4E"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etNamaBalita"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Nama Balita"
                    android:background="@drawable/bg_input_box"
                    android:paddingHorizontal="12dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginBottom="20dp" />

                <!-- Nomor Antrian -->
                <TextView
                    android:id="@+id/tvNomorAntrian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A12"
                    android:textColor="#8B6F84"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harap datang 15 menit sebelum jam antrian."
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp" />

                <!-- Tombol Konfirmasi -->
                <Button
                    android:id="@+id/btnKonfirmasi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Konfirmasi Reservasi"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_primary" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- BOTTOM NAVIGATION BAR -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@android:color/white"
        app:fabAlignmentMode="center"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="20dp"
        app:fabCradleVerticalOffset="10dp"
        app:hideOnScroll="true" />

    <!-- FLOATING ACTION BUTTON -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_beranda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#716A8D"
        android:src="@drawable/ic_beranda"
        app:layout_anchor="@id/bottom_app_bar"
        app:maxImageSize="30dp"
        app:tint="@android:color/white" />

    <!-- BOTTOM NAVIGATION VIEW -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/bottom_nav_color_selector"
        app:itemTextColor="@color/bottom_nav_color_selector"
        app:labelVisibilityMode="labeled" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>