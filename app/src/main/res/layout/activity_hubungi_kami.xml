<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6EAF0"
    tools:context=".HubungiKamiActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hubungi Kami"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/ungu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            android:layout_marginStart="8dp" />

        <!-- CONTACT INFO (no card) -->
        <LinearLayout
            android:id="@+id/contactInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_white_rounded_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posyandu Harapan Bunda"
                android:textStyle="bold"
                android:textColor="@color/ungu"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl. Raya Lumbir RT 03 RW 08"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="posyanduharapanbunda@gmail.com"
                android:layout_marginTop="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvWhatsAppNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+6282556777890" />

                <Button
                    android:id="@+id/btnWhatsApp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/ungu"
                    android:textColor="@color/white"
                    android:text="WhatsApp" />
            </LinearLayout>
        </LinearLayout>

        <!-- MAIN: Form left, map right (no cards) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainArea"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/contactInfo"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp">

            <!-- Form column -->
            <LinearLayout
                android:id="@+id/formColumn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/mapColumn"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kirim Pesan"
                    android:textColor="@color/ungu"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etNama"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:hint="Nama"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/etEmailOrPhone"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:hint="Email / Nomor HP"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/etPesan"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Pesan"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnKirimPesan"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/ungu"
                    android:textColor="@color/white"
                    android:text="Kirim Pesan" />
            </LinearLayout>

            <!-- Map column -->
            <LinearLayout
                android:id="@+id/mapColumn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/formColumn">

                <ImageView
                    android:id="@+id/mapThumb"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/map_placeholder"
                    android:scaleType="centerCrop"
                    android:contentDescription="Map" />

                <TextView
                    android:id="@+id/tvJamTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Jam Operasional"
                    android:textColor="@color/ungu"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senin - Jumat : 07.50 - 15.30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sabtu - Minggu : 07.50 - 15.30" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/bottom_nav_menu"
            app:itemIconTint="@color/bottom_nav_color_selector"
            app:itemTextColor="@color/bottom_nav_color_selector"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>